#!/bin/bash

# Use Case 5: Client modifies a task, syncs and finds that another client has
# modified the same task twice.

echo '--- modify --------------------------------------------------------------'
task rc:client2/rc /Two/ modify mod1

echo '--- modify --------------------------------------------------------------'
sleep 2
task rc:client1/rc /Two/ modify mod2

echo '--- modify --------------------------------------------------------------'
sleep 2
task rc:client2/rc /Two/ modify mod3

echo '--- modify --------------------------------------------------------------'
sleep 2
task rc:client1/rc /Two/ modify mod4

echo '--- sync ----------------------------------------------------------------'
task rc:client2/rc rc.debug=1 sync

echo '--- sync ----------------------------------------------------------------'
task rc:client1/rc rc.debug=1 sync

